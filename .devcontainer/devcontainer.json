{
  "name": "FLP Haskell playground",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/hs-playground",
  "shutdownAction": "stopCompose",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "haskell.haskell",
        "ms-azuretools.vscode-docker",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
